<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title><%= title %></title>
    </head>
    <body>
        <div id="root"></div>
        <% files.css.forEach(function (src) { %>
            <link rel="stylesheet" href="<%= src %>">
        <% }) %>
        <% files.js.forEach(function(src) { %>
            <script src="<%= src %>" defer></script>
        <% }) %>
    </body>
</html>
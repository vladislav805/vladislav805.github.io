{
    "compilerOptions": {
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": ["dom", "es6"],
        "resolveJsonModule": true,
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@typings": ["src/typings"],
            "@typings/*": ["src/typings/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "src/tests/*"
    ]
}
